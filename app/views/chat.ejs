<% include partials/template/header.ejs %>
<div class="container">
    <div class="chat-header">
        <h1>Chat With Us</h1>
        <form name="chatForm" class="chat-form">
            <div class="form-group">
                <label for="chat-username">Name</label><br>
                <input type="text" id="chat-username" required placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="chat-message">Message</label><br>
                <textarea type="text" id="chat-message" rows="2" autocomplete="off" required placeholder="Enter a message, then click Chat"></textarea>
            </div>
            <button type="submit" id="chat-submit">Chat</button>
        </form>
    </div>
    <div class="panel">
        <div class="chat-display">
            <p class="chat-text">Welcome! Message us using the form to the left.</p>
        </div>
    </div>
</div>
<% include partials/template/footer.ejs %>